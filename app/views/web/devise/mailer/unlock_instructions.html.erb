<% require 'devise/version' %>
<p><%= t('devise.mailer.unlock_instructions.greeting', :recipient => @resource.email, :default => "Hello #{@resource.email}!") %></p>

<p><%= t('devise.mailer.unlock_instructions.message', :default => "Your account has been locked due to an excessive amount of unsuccessful sign in attempts.") %></p>

<p><%= t('devise.mailer.unlock_instructions.instruction', :default => "Click the link below to unlock your account:") %></p>

<p><%= link_to t('devise.mailer.unlock_instructions.action', :default => "Unlock my account"), unlock_url(@resource, :unlock_token => (Devise::VERSION.start_with?('3.') ? @token :@resource.unlock_token)) %></p>
