<h2 class="ui dividing header"><%= title %></h2>

<%= form_for resource,
  :as => resource_name,
  :url => password_path(resource_name),
  :html => {
    :class => 'ui form',
    :method => :put
  } do |f|
%>
  <% devise_error_messages! %>

  <%= f.hidden_field :reset_password_token %>

  <div class="field <%= 'error' if resource.errors[:password].any? %>">
    <%= f.label :password, t('devise.passwords.edit.new_password') %>
    <%= f.password_field :password, :autocomplete => :off, :required => true, :placeholder => t('placeholders.common.new_password') %>
  </div>

  <div class="field <%= 'error' if resource.errors[:password_confirmation].any? %>">
    <%= f.label :password_confirmation, t('devise.passwords.edit.confirm_new_password') %>
    <%= f.password_field :password_confirmation, :autocomplete => :off, :required => true, :placeholder => t('placeholders.common.new_password_confirmation') %>
  </div>

  <div class="actions">
    <%= f.button t('devise.passwords.edit.change_my_password'), :class => 'ui fluid positive button' %>
  </div>
<% end %>

<%= render '/web/devise/shared/links' %>
