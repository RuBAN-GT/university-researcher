<h2 class="ui dividing header"><%= title %></h2>

<%= form_for resource,
  :as => resource_name,
  :url => session_path(resource_name),
  :html => { :class => 'ui form' } do |f|
%>
  <div class="field <%= 'error' if resource.errors[:email].any? %>">
      <%= f.label :email %>
      <div class="ui left icon input">
        <%= f.email_field :email, :autofocus => true, :required => true, :placeholder => t('placeholders.common.email')  %>
        <%= icon :mail %>
      </div>
  </div>

  <div class="field <%= 'error' if resource.errors[:password].any? %>">
    <%= f.label :password %>
    <div class="ui left icon input">
      <%= f.password_field :password, :autocomplete => :off, :required => true, :placeholder => t('placeholders.common.password') %>
      <%= icon :key %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <div class="ui checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  <% end %>

  <div class="actions">
    <%= f.button t('devise.sessions.new.sign_in'), :class => 'ui fluid positive button' %>
  </div>
<% end %>

<%= render '/web/devise/shared/links' %>
