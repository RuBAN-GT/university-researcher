- if positions.any?
  %table{:class => 'ui celled selectable striped primers table'}
    %thead
      %tr
        %th= t 'activerecord.attributes.position.full_name'
        %th= t 'activerecord.attributes.position.created_at'
    %tbody
      - positions.each do |position|
        %tr
          %td
            = link_to position.full_name,
              position_path(position)
          %td.collapsing= position.created_at.strftime '%Y/%m/%d %H:%M'
- else
  .ui.message
    .header= t 'tips.common.empty'
    .content= t 'tips.common.no_entries'
